
@{
    ViewData["Title"] = "Yeni İlaç Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@model Web.Areas.Admin.Models.AddMedicineViewModel

<h3>Yeni İlaç Ekle</h3>

<form asp-action="AddMedicine" method="post" enctype="multipart/form-data">
    <div class="d-flex flex-column">
        <div>
            <label class="form-label" asp-for="Name">İsim:</label>
            <input type="text" class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div>
            <label class="form-label" asp-for="Description">Açıklama:</label>
            <textarea class="form-control" rows="4" asp-for="Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div>
            <label class="form-label" asp-for="Price">Fiyat:</label>
            <input type="text" class="form-control" asp-for="Price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div>
            <label class="form-label" asp-for="Stock">Stok:</label>
            <input type="number" class="form-control" asp-for="Stock" />
            <span asp-validation-for="Stock" class="text-danger"></span>
        </div>
        <div>
            <label class="form-label" asp-for="Picture">Fotoğraf:</label>
            <input type="file" class="form-control" asp-for="Picture" />
            <span asp-validation-for="Picture" class="text-danger"></span>
        </div>
        <div class="d-flex mt-4 justify-content-between">
            <button class="btn btn-primary" type="submit">Ekle</button>
            <a asp-action="Index" asp-controller="Medicine" class="btn btn-secondary">Kapat</a>
        </div>
    </div>
</form>

